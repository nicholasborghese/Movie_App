<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="card m-3 text-center" style="width: 20rem;">
      <img class="card-img-top" src={{model.Poster}} alt="Card image cap">
    </div>
    <div class="col-5 py-3">
      <h3>{{model.Title}}</h3>
      {{#if model.favorite}}
        <button {{action 'unsave'}}>Unsave</button>
      {{else}}
        <button {{action 'save'}}>Save</button>
      {{/if}}
      <h4>{{model.Year}} {{model.Rated}}</h4>
      <h5>Genre: {{model.Genre}}</h5>
      <p>{{model.Plot}}</p>
      <h6>Director: {{model.Director}}</h6>
      <h6>Actors/Actresses: {{model.Actors}}</h6>
      <h6>Rating: {{model.imdbRating}}/10</h6>
      <h6>Votes: {{model.imdbVotes}}</h6>
    </div>
  </div>
</div>

{{outlet}}